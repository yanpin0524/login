<main class="d-flex justify-content-center h-100">
  <div class="card mt-5 h-50" style="width: 700px;">
    <div class="card-header">
      Login
    </div>
    <div class="card-body">
      <form action="/" method="post">
        <div class="mb-3">
          <label for="email" class="form-label card-title">Email address</label>
          <input type="email" class="form-control" id="email" name="email">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label card-title">Password</label>
          <input type="password" class="form-control" id="password" name="password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</main>